{
	"lock": true,
	"unstable": [
		"temporal"
	],
    "tasks": {
        "dev": "deno run --watch main.ts"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1"
    },
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"deno.worker",
			"dom"
		]
	},
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [],
            "exclude": []
        }
    }
}
